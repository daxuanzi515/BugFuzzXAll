#include <iostream>
using namespace std;
void print_int(int value)
{
    cout << value << endl;
}
void print_char(char value)
{
    cout << value << endl;
}
int main()
{
    int num;
    cout << "Please enter a number: ";
    cin >> num;
    char value = num;
    print_int(value);
    print_char(value);
}

